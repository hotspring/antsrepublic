<div class="col-md-6">
  <%= simple_form_for(:session, url: admin_login_path) do |f| %>
    <%= f.input :name, label: Admin.human_attribute_name("name") %>
    <%= f.input :password, label: Admin.human_attribute_name("password") %>
    <%= f.button :submit, t(:login) %>
  <% end %>
</div>
<div class="col-md-12">
  <%= link_to t(:back), :back %>
</div>