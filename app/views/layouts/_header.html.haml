#nav-wrapper.background-white.color-black
  %div.topNav
    .container
      .row
        %ul.nav.navbar-nav
               
          - if logged_in?
            %li 
              = link_to '个人中心', dashboard_user_path(session[:user_id])
            %li
              = link_to t('logout'), logout_path, method: :delete 
          - else
            %li
              = link_to( t('signup'), signup_path ) 
            %li
              = link_to t('login'), login_path
          %li  
            = link_to t('联系客服'), '#'
          %li  
            = link_to t('网站导航'), '#'   

