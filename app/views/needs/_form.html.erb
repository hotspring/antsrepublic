<%= simple_form_for(@need) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, required: true %>
    <%= f.input :description %>
    <%= f.input :user_id, as: :hidden, value: session[:user_id]%>
    <%= f.input :ending_date, required: true %>
    <%= f.input :final_date, required: true %>    
    <%= f.input :price_range, priority: [ "高端" ], collection: [ "预算充足", "标准预算", "预算有限"], required: true %>
    <%= radio_button(:need, :category, "效果图") %>效果图
    <%= radio_button(:need, :category, "影片") %>影片
    <%= radio_button(:need, :category, "多媒体") %>多媒体
    <%= f.input :state, collection: ['等待审核', '审核拒绝', '指派蚁后', '项目开始', '项目终止', '项目完成'] %>
    <hr/>
    <h3>项目关键字</h3>
    <p>
     add tags
    </p>
    <hr/>    
    <h3>参考案例</h3>
    <p>
     add products
    </p>
    <hr/>    
    <h3>指定蚁后</h3>
    <p>
     add ants
    </p>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: t('new_need') %>
  </div>
<% end %>
