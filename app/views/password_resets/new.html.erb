<section class='userLogin'>
  <div class="mask-bg">
  	<div class="container">
  		<div class="row">
  			<div class='col-sm-12 col-md-offset-3 col-md-6'>
  				<h3 class="text-center">忘记密码</h3>
  			</div>
  		</div>
  	  <div class="row">
        <div class='col-sm-12 col-md-offset-3 col-md-6'>
  				<div class="thumbnail info-thumbnail">
  					<div class="caption" id="jackLogin">
              <%= form_for(:password_reset, url: password_resets_path) do |f| %>
                <div class="form-group">
                  <%= f.label :email, class:'col-sm-3 text-right' %>
  								<div class="col-sm-9">
                    <%= f.email_field :email, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="btn-register">
                    <%= f.submit "Reset Password", class: 'btn btn-default btn btn-block btn-ants' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
