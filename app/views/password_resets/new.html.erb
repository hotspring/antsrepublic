<section class='userLogin'>
  <div class="mask-bg">
  	<div class="container">
  		<div class="row">
  			<div class='col-sm-12 col-md-offset-3 col-md-6'>
  				<h3 class="text-center">忘记密码</h3>
  			</div>
  		</div>
  	  <div class="row">
        <div class='col-sm-12 col-md-offset-3 col-md-6'>
  				<div class="thumbnail info-thumbnail">
  					<div class="caption" id="jackLogin">
              <%= form_for url: :password_resets_path do %>
                <div class="field">
                  <%= label_tag :email %>
                  <%= text_field_tag :email, params[:email] %>
                </div>
                <div class="btn btn-block btn-ants">
                  <%= submit_tag "Reset Password" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
