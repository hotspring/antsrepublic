<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :avatar, as: :file, hint: f.object.avatar.nil? ? '' :image_tag(f.object.avatar.small_url, size: '128x128') %>
    <%= f.input :client_name %>
    <%= f.input :ref_price %>
    <%= f.input :user_id, as: :hidden, value: session[:user_id]%>
    <%= radio_button(:product, :category, "效果图") %>效果图
    <%= radio_button(:product, :category, "影片") %>影片
    <%= radio_button(:product, :category, "多媒体") %>多媒体
    <%#= f.select :category, options_for_select([ "效果图", "影片", "多媒体" ], "效果图") %>
    <%#= f.input :main_media %>
    <%= f.input :description %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
