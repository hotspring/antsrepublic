
<h1>项目管理</h1>
<table>
  <thead>
    <tr>
      <th>项目名称</th> 
      <th>委托客户</th>
      <th>参考价格</th>
      <th>项目类型</th>
      <th>项目状态</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <!--td><%= link_to image_tag(product.avatar, size: '128x128'), product %></td-->
        <td><%= product.state =='等待审核' ? link_to( product.title, need_path(product) ): link_to( product.title, product) %></td>
        
        <td><%= product.client_name %></td>
        <td><%= product.ref_price %></td>
        <td><%= product.category %></td>
        <td><%= product.state %></td>

<!--         <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

