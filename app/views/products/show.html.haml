      .col-md-2.queens_work_queen_info
        .avatar_wapper.text-center
          = image_tag(@product.queen.avatar.url+'?imageView2/2/w/200/h/200', class: 'img-circle') unless @product.queen.nil?
      .col-md-2.queens_work_queen_name
        %p
