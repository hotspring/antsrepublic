%section.queens_work_slider
  .container-fliud
    .row
      - if @product.avatar
        - if @product.avatar.file and %w{jpg png gif bmp}.include?(@product.avatar.file.extension.downcase)
          = image_tag(@product.avatar.url + "?imageView2/0/h/480", width:"100%")
        - if @product.avatar.file and %w{mp4 webm}.include?(@product.avatar.file.extension.downcase)
          //https://github.com/seanbehan/videojs_rails
          =# @product.avatar.url
          =# videojs_rails sources: { mp4: @product.avatar.url, webm: @product.avatar.url + "/avthumb/webm"}, setup: "{}", controls: true, width:"90%"
          %video{ src: @product.avatar.url , width: "80%", controls: "controls"}

%section.queens_work_title
  .container
    .row
      .col-md-10
        %p
          %strong= @product.title
      .col-md-2        
        - if current_user and current_user.voted_for? @product
          %span.like_icon.liked
        - else
          %a{:href => vote_it_queen_work_path(@product), :title => "点赞"}
            %span.like_icon

        %a.jiathis.jiathis_txt.jiathis_separator.share_icon{:href => "http://www.jiathis.com/share?uid=2116682",:target=>"_blank"}
        :javascript
          var jiathis_config={
            data_track_clickback:true,
            siteNum:4,
            sm:"weixin,tsina,cqq,qzone",
            summary:"",
            boldNum:4,
            shortUrl:false,
            hideMore:false
          }

        %script{:src => "http://v3.jiathis.com/code/jia.js?uid=2116682",:type => "text/javascript"}

