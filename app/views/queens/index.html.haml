%section.queens_page_list
  .container
    .row.queens_page_list_header
      .col-md-8
        %h2
          %span.queens_page_list_header_icon
          认证蚁后
      .col-md-4
        = search_form_for @q do |f|  
          .form-group
            = f.search_field :name_cont  
    .row
      - @queens.each_with_index do |queen, index|
        -if (index%2 == 0)
          - divcls = 'col-md-6 queen'
        -else
          - divcls = 'col-md-6 queen queen_odd'
        
        %div{:class => divcls}
          %a{:href => queen_path(queen)}
            .queen_avatar.text-right
              = image_tag(image_path(queen.avatar_url), class: 'img-circle')
            .queen_name_desc
              %h4
                %strong= queen.name
              %p
                = queen.description if queen.description
