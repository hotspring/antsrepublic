<% [:danger].each do |key| %>
  <% if flash[key] %>
    <%= content_tag :div, flash[key], :id=> key, class: "text-center alert alert-#{key}" %>
  <% end %>
<% end %>
<section class='userLogin'>
  <div class="mask-bg">
  	<div class="container">
  		<div class="row">
  			<div class='col-sm-12 col-md-offset-3 col-md-6'>
  				<h3 class="text-center">登 陆</h3>
  			</div>
  		</div>
  	    <div class="row">

  			<div class="col-sm-12 my-offset-3 col-md-5">
  				<div class="thumbnail info-thumbnail">
  					<div class="caption" id="jackLogin">
  						<%= simple_form_for(:session, url: login_path, html:{class:'form-horizontal'}) do |f| %>
  							<%= f.error_notification %>
  							<div class="form-group">
  								<%= f.label :email, class:'col-sm-3 text-right', label:User.human_attribute_name("email") %>
  								<div class="col-sm-9">
  									<%= f.input_field :email, class:'form-control' %>
  								</div>
  							</div>

  							<div class="form-group">
  								<%= f.label :password, class:'col-sm-3 text-right', label:User.human_attribute_name("password") %>
  								<div class="col-sm-9">
  									<%= f.input_field :password, class:'form-control' %>
  								</div>
                  <div class="col-sm-9">
                    <%= link_to "(忘记密码?)", new_password_reset_path %>
                  </div>
  							</div>

                <div class="form-group" style="margin:40px 0">
  								<label class="control-label col-sm-3 text-right"></label>
  								<div class="col-sm-7 btn-register">
  									<%= f.button :submit, t(:login), class:'btn btn-block btn-ants' %>
  								</div>
  							</div>

  						<% end %>
  					</div>
  					<!-- 快速登录 -->
  					<div style="clear: both"></div>
  					<div class="fastLogin">
  						<h3>快速登录</h3>
  						<div class="btn-group">
  							<a href="#" class="xinlang" title="新浪登录"></a>
  							<a href="#" class="weChat" title="微信登录"></a>
  							<a href="#" class="QQ" title="qq登录"></a>
  						</div>
  					</div>
  				</div>
  			</div>
  		</div>
  	</div>
  </div>
</section>
