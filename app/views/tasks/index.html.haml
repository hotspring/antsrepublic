%section.user-center-section
  .container
    .row
      = render "users/menu"
    .row.background-white
      .col-md-12
        .content
          #notice= notice
          %p
            %a.back-to-projects.text-center{:href => "#"} 返回项目列表
          .caption
            %h3 
              Listing Tasks
          %table
            %thead
              %tr
                %th Dead line
                %th Title
                %th Description
                %th State
                %th{colspan:'3'}
            %tbody
              - @tasks.each do |task| 
                %tr
                  %td= task.dead_line
                  %td= task.title
                  %td= task.description
                  %td= task.state
                  %td= link_to 'Show', task
                  %td= link_to 'Edit', edit_task_path(task)
                  %td= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }
          %p= link_to 'New Task', new_task_path

