<section>
	<div class='container'>	
<p id="notice"><%= notice %></p>
<row>
<p>
  <strong>蚁后:</strong>
  <%= @task.need.queen.name %>
</p>
<p>
  <strong>上传时间:</strong>
  <%= @task.created_at %>
</p>
<p>
  <strong>成果简介:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>补充说明:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>状态:</strong>
  <%= @task.state %>
</p>
<% if @task.need.user_id == current_user.id and @task.state == '等待甲方'%>
<p>
<%= link_to '甲方确认', confirm_task_path(@task), class: 'btn btn-info' %>
<%= link_to '退回重来', refuse_task_path(@task), class: 'btn btn-warning' %>
<% end %>
</p>
<p>
<%= link_to t('edit'), edit_task_path(@task) %>
<%= link_to t('back'), need_tasks_path(@need,@tasks) %>
</p>
</row>
</div>
</section>