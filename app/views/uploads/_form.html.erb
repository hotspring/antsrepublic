<%= simple_form_for(@upload) do |f| %>
  <%= f.error_notification %>
  <h2><%= Product.find(params[:product_id]).title if params[:product_id] %></h2>
  <div class="form-inputs">
    <%= f.input :media %>
    <%= f.input :product_id, as: :hidden, value: params[:product_id] %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
