%section.user-center-section
  .container
    .row
      = render "menu"
    .row.background-white
      .col-md-12
        .content
          %h3 我要认证
            
          - if @user.state == '未认证' or @user.state == '拒绝' or @user.state == nil
            .row
              .col-xs-5.col-sm-4.col-md-3.col-md-offset-2.col-sm-offset-1.col-xs-offset-1
                %a.thumbnail.gallery-thumbnail{:href => verify_user_path(current_user, role: :owner)}
                  %img.img-circle{:alt => "...", :src => image_path( "neat/placeholder-man-sq.jpg")}/
                %br/
                %p.text-center
                  %small 
                    =link_to '我是甲方', verify_user_path(current_user, role: :owner)
              .col-xs-5.col-sm-4.col-md-3.col-md-offset-2.col-sm-offset-1
                %a.thumbnail.gallery-thumbnail{:href => verify_user_path(current_user, role: :queen)}
                  %img.img-circle{:alt => "...", :src => image_path( "neat/placeholder-office-couple-sq.jpg")}/
                %br/
                %p.text-center
                  %small 
                    =link_to '我是蚁后', verify_user_path(current_user, role: :queen)
          - else

              %p.text-center
                请等待平台审核
