<style>
#jackLogin label{
	line-height: 55px;
}
</style>
<section style="background-color:#ECF4F7">
	<div class='container'>	
		<div class='row'>
			<div class='col-sm-12 col-md-offset-2 col-md-8'>
				<div class='thumbnail info-thumbnail'>
					<div class="caption" id="jackLogin">
						<h3>注册</h3>
					
					<%= simple_form_for @user, defaults: { input_html: { class: 'default_class' } } do |f| %>
						<div class="form-group">
							<label class="control-label col-sm-2">姓&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;名</label>
							<div class="col-sm-10">
							  <%= f.input :name, label: false %>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-sm-2">邮&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;箱</label>
							<div class="col-sm-10">
							  <%= f.input :email, label: false %>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-sm-2">密&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;码</label>
							<div class="col-sm-10">
							  <%= f.input :password, label: false %>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-sm-2">确认密码</label>
							<div class="col-sm-10">
							  <%= f.input :password_confirmation, label: false %>
							</div>
						</div>
						<div class="col-sm-offset-2 col-sm-10">
						  	<%= f.button :submit, value: '注册访客',class:'btn btn-block btn-info"',:style=>"background-color:#5EB4E7;color:#fff;font-weight: bold;letter-spacing: 2px;font-size: 26px;" %>
						</div>
					<% end %>
					
				</div>
				</div>
			</div>
		</div>
	</div>
</section>

