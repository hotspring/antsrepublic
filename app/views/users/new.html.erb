<style>
#jackLogin label{
	line-height: 55px;
}
</style>
<section style="background-color:#ECF4F7">
	<div class='container'>	
		<div class='row'>
			<div class='col-sm-12 col-md-offset-3 col-md-6'>
				<div class='thumbnail info-thumbnail'>
					<div class="caption" id="jackLogin">
						<h3 class="col-sm-offset-3 col-sm-9">注册</h3>
					
					<%= simple_form_for @user, defaults: { input_html: { class: 'default_class' } } do |f| %>
						<div class="form-group">
							<label class="control-label col-sm-3">姓名*</label>
							<div class="col-sm-9">
							  <%= f.input :name, label: false %>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-sm-3">邮箱*</label>
							<div class="col-sm-9">
							  <%= f.input :email, label: false %>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-sm-3">密码*</label>
							<div class="col-sm-9">
							  <%= f.input :password, label: false %>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-sm-3">确认密码*</label>
							<div class="col-sm-9">
							  <%= f.input :password_confirmation, label: false %>
							</div>
						</div>
						<div class="col-sm-offset-3 col-sm-3">
						  	<%= f.button :submit, value: '注册',class:'btn btn-block btn-info"',:style=>"background-color:#5EB4E7;color:#fff;letter-spacing: 2px;font-size: 14px;" %>
						</div>
					<% end %>
					
				</div>
				</div>
			</div>
		</div>
	</div>
</section>

