
<section>
	<div class='container'>	
		<div class='row'>
			<div class='col-sm-12 col-md-offset-3 col-md-6'>
				<div class='thumbnail info-thumbnail background-lead color-white'>
					<div class='caption'>
						<h3>
							<span class="fa fa-user"></span>
							Login
							<span class='color-white'>
								<small><%= link_to t(:back), :back, class: 'pull-right' %></small>
							</span>
						</h3>
					
					<%= simple_form_for(@user) do |f| %>
  <%= f.input :email %>
  <%= f.input :name %>
  <%= f.input :cell %>
  <%= f.input :company %>
  <%= f.input :avatar %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <hr/>
  <%= f.button :submit, value: '创建甲方' %>
<% end %>
					
				</div>
				</div>
			</div>
		</div>
	</div>
</section>