%section.user-center-section
  .container
    .row
      = render "menu"
    .row.background-white
      .col-md-12
        .content
          .caption
            %h3
              = t('user_product')
              = link_to t('new_need'), new_need_path, class: "btn btn-primary" if @user.has_role? :owner 

          - if @products.blank?
            没有项目              
          %table.table
            %thead
              %tr
                %th 项目名称
                %th 委托客户
                %th 项目类型
                %th 项目状态
                %th 
            %tbody
              - @products.each do |product|
                %tr
                  %td= product.title
                  %td= product.client_name
                  %td= product.category
                  %td= product.state
                  %td
                    =# link_to t('show'), product, class: 'btn btn-primary'
                    - unless product.state == '等待审核'
                      = link_to '日程计划', tasks_path(user_id: current_user), class: 'btn btn-info'
                    - else
                      = link_to t('edit'), edit_need_path(product), class: 'btn btn-primary'
                      = link_to t('destroy'), product, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-primary' 